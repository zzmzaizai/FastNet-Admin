{
  "$schema": "https://gitee.com/dotnetchina/Furion/raw/v4/schemas/v4/furion-schema.json",
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Information"
    }
  },
  "AllowedHosts": "*",
  "SpecificationDocumentSettings": {
    "DocumentTitle": "FastNet | Web API",
    "GroupOpenApiInfos": [
      {
        "Group": "System",
        "Order": 10,
        "Title": "System Api Group",
        "Description": "User、Role、Menu ...",
        "Version": "1.0.0",
        "TermsOfService": "http://www.dnngo.net",
        "Contact": {
          "Name": "痞子再",
          "Url": "https://gitee.com/washala",
          "Email": "washala@qq.com"
        }
      },
      {
        "Group": "Host",
        "Order": 0,
        "Title": "Host Api Group",
        "Description": "Tenant",
        "Version": "1.0.0",
        "TermsOfService": "http://www.dnngo.net",
        "Contact": {
          "Name": "痞子再",
          "Url": "https://gitee.com/washala",
          "Email": "washala@qq.com"
        }
      }
    ]
  },
  {
    "JWTSettings": {
      "ValidateIssuerSigningKey": true, // 是否验证密钥，bool 类型，默认true
      "IssuerSigningKey": "sad@342dsfsdAASajklbcxvcvfsdewrdfpoiqzmnjldsc", // 密钥，string 类型，必须是复杂密钥，长度大于16，.NET8+ 长度需大于 32
      "ValidateIssuer": true, // 是否验证签发方，bool 类型，默认true
      "ValidIssuer": "签发方", // 签发方，string 类型
      "ValidateAudience": true, // 是否验证签收方，bool 类型，默认true
      "ValidAudience": "签收方", // 签收方，string 类型
      "ValidateLifetime": true, // 是否验证过期时间，bool 类型，默认true，建议true
      "ExpiredTime": 20, // 过期时间，long 类型，单位分钟，默认20分钟
      "ClockSkew": 5, // 过期时间容错值，long 类型，单位秒，默认 5秒
      "Algorithm": "HS256" // 加密算法，string 类型，默认 HS256
    }
  },
  "CorsAccessorSettings": {
    "WithExposedHeaders": [
      "access-token",
      "x-access-token",
      "environment"
    ]
  },
  //系统层设置
  "DataSettings": {
    "InitTable": true, //是否初始化表结构
    "InitSeedData": true //是否初始化种子数据
  },
  "ConnectionConfigs": [
    {
      "ConfigId": "FastNet", //租户ID
      "ConnectionString": "Data Source=./Furion.db",
      "DbType": "Sqlite",
      "IsAutoCloseConnection": true
    }
  ]
}